extends layout

block content
  nav(class="white", role="navigation")
    div(class="nav-wrapper container")
      a(href="#", id="logo-container", class="brand-logo") #{title}

  div(class="container")
    div(class="section")
      div(class="row")
        div(class="col s12")
          div(class="row")
            input(type="text",id="USEREMAIL",class="PROOFIT_INPUT",placeholder="user email")
            input(type="text",id="RECORD",class="PROOFIT_INPUT",placeholder="record")
            a(class="btn-large waves-effect waves-light teal lighten-1",id="BTN_INPUT") input
            a(class="btn-large waves-effect waves-light teal lighten-1",id="BTN_QUERY") query
            a(class="btn-large waves-effect waves-light teal lighten-1",id="BTN_DELETE") delete
            div(id="PROOFIT")

  script(src="/javascripts/jquery.js")
  script(src="/javascripts/materialize.js")
  script(src="#{javascript}")